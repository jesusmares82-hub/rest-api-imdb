{
  "openapi": "3.0.0",
  "info": {
    "title": "IMDB REST API",
    "version": "1.0",
    "description": "REST API para poder obtener la información acerca de películas, series, actores y directores de cine"
  },
  "servers": [
    {
      "url": "http://localhost:8000/api/v1",
      "description": "Development"
    }
  ],
  "paths": {
    "/actors": {
      "get": {
        "description": "Obtener todos los actores de la base de datos",
        "tags": ["Actors"],
        "responses": {
          "200": {
            "description": "Lista de actores"
          }
        }
      },
      "post": {
        "description": "Crear un actor",
        "tags": ["Actors"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Actor"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Se ha creado un actor satisfactoriamente"
          }
        }
      }
    },
    "/directors": {
      "get": {
        "description": "Obtener todos los directores de la base de datos",
        "tags": ["Directors"],
        "responses": {
          "200": {
            "description": "Lista de directores"
          }
        }
      },
      "post": {
        "description": "Crear un director",
        "tags": ["Directors"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Director"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Se ha creado un director satisfactoriamente"
          }
        }
      }
    },
    "/users": {
      "get": {
        "description": "Obtener todos los usuarios de la base de datos",
        "tags": ["Users"],
        "responses": {
          "200": {
            "description": "Lista de usuarios"
          }
        }
      },
      "post": {
        "description": "Crear un usuario",
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Usuario"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Se ha creado un director satisfactoriamente"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Actor": {
        "properties": {
          "firstname": {
            "type": "string",
            "description": "El nombre del actor"
          },
          "lastname": {
            "type": "string",
            "description": "El apellido del actor"
          },
          "dob": {
            "type": "object",
            "description": "date of birth",
            "example": "1990-02-02"
          },
          "biography": {
            "type": "string",
            "description": "Biografia del actor"
          },
          "profile_photo": {
            "type": "string",
            "description": "image URL",
            "example": "https://apihandyman.io/images/commons/openapi/openapi-map.png"
          },
          "active": {
            "type": "boolean"
          }
        }
      },
      "Director": {
        "properties": {
          "firstname": {
            "type": "string",
            "description": "El nombre del actor"
          },
          "lastname": {
            "type": "string",
            "description": "El apellido del actor"
          },
          "dob": {
            "type": "object",
            "description": "date of birth",
            "example": "a990-02-02"
          },
          "biography": {
            "type": "string",
            "description": "Biografia del actor"
          },
          "profile_photo": {
            "type": "string",
            "description": "image URL",
            "example": "https://apihandyman.io/images/commons/openapi/openapi-map.png"
          },
          "active": {
            "type": "boolean"
          }
        }
      },
      "Usuario": {
        "properties": {
          "firstname": {
            "type": "string",
            "description": "El nombre del actor"
          },
          "lastname": {
            "type": "string",
            "description": "El apellido del actor"
          },
          "email": {
            "type": "object",
            "description": "Email del usuario",
            "example": "usuario@mail.com"
          },
          "password": {
            "type": "string",
            "description": "Password del usuario"
          },
          "rest_token": {
            "type": "string",
            "description": "Resetear token del usuario",
            "example": "NA"
          },
          "active": {
            "type": "boolean"
          }
        }
      }
    }
  }
}
